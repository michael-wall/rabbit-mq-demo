{
	"id": "rabbitmqlistener",
	"kind": "Deployment",
	"cpu": 2,
	"memory": 1024,
	"scale": 1,	
	"env": {
		"SPRING_RABBITMQ_HOST": "rabbitmq",
		"SPRING_RABBITMQ_PORT": "5672",
		"SPRING_RABBITMQ_USERNAME": "@rabbit-mq-liferay-user",
		"SPRING_RABBITMQ_PASSWORD": "@rabbit-mq-liferay-pass",
		"RABBIT_MQ_DEMO_QUEUE_NAME": "demo-queue",
		"RABBIT_MQ_PROCESSED_QUEUE_NAME": "processed-queue",
		"RABBIT_MQ_ERROR_QUEUE_NAME": "error-queue",
		"LISTENER_OAUTH_CLIENT_ID": "@listener-oauth-client-id",
		"LISTENER_OAUTH_CLIENT_SECRET": "@listener-oauth-client-secret"
	},
	"environments": {
		"infra": {
			"deploy": false
		}
	},
	"livenessProbe": {
		"httpGet": {
			"path": "/login",
			"port": 58081
		}
	},
	"readinessProbe": {
		"httpGet": {
			"path": "/login",
			"port": 58081
		}
	},	
	"ports": [
		{
			"port": 58081,
			"external": false
		}
	]
}